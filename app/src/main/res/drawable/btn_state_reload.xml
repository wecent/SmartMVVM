<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <!-- 圆角 -->
            <corners android:radius="24dp" />

            <!-- 实心 -->
            <solid android:color="@color/config_color_primary" />

            <!-- 边距 -->
            <padding android:bottom="6dp" android:left="32dp" android:right="32dp" android:top="6dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <!-- 圆角 -->
            <corners android:radius="24dp" />

            <!-- 实心 -->
            <solid android:color="@color/config_color_primary_dark" />

            <!-- 边距 -->
            <padding android:bottom="6dp" android:left="32dp" android:right="32dp" android:top="6dp" />
        </shape>
    </item>

</selector>