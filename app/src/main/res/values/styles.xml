<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- BaseActivity 的主题样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/config_color_primary</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
    </style>

    <style name="AppTheme.NoToolBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoToolBar">
        <item name="android:windowBackground">@drawable/bg_config_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
