<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="ViewModel"
            type="com.wecent.smartmvvm.main.MainViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/v_line" />

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/config_color_gray_9"
            android:layout_above="@+id/tb_main" />

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/config_color_white"
            app:tl_iconHeight="20dp"
            app:tl_iconWidth="20dp"
            app:tl_indicator_height="0dp"
            app:tl_textSelectColor="@color/config_color_primary"
            app:tl_textUnselectColor="@color/config_color_text_2"
            app:tl_textsize="12dp" />

    </RelativeLayout>

</layout>
